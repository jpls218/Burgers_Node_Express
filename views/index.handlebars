<h1>Eat-Da-Burger!</h1>
<div id="notBeenEaten">
<h2>Burgers that have not been devoured!</h2>

<ul>
  {{#each burgers}}
  {{#unless devour}}
  {{> burgers/burger-block devour=true}}
  {{/unless}}
  {{/each}}
</ul>
</div>
<div id="addBurgerOption">
<h2 id="add-burgs">Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="dev">Has Been Devoured?</label><br>
    <input type="radio" name="devour" value="1" id="devour" checked> Devoured!<br>
    <input type="radio" name="devour" value="0" id="no-devour"> Made
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

<div id="eatenBurgers">
<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devour}}
  {{> burgers/burger-block devour=false}}
  {{/if}}
  {{/each}}
</ul>
</div>
